#!/bin/bash -e

ZABBIX_AGENT_PID_FILE=$OPENSHIFT_ZABBIX_AGENT_DIR/pid/zabbix.pid
name="zabbix"

#
#  main():
#

# Ensure arguments.
if ! [ $# -gt 0 ]; then
    echo "Usage: $0 [start|restart|graceful|graceful-stop|stop|status|update|use-source]"
    exit 1
fi

source $OPENSHIFT_CARTRIDGE_SDK_BASH

function start() {
  if [ -n "$OPENSHIFT_ZABBIX_AGENT_INTERVAL" ]; then
    ( $OPENSHIFT_ZABBIX_AGENT_DIR/usr/bin/send-zabbix-data -i $OPENSHIFT_ZABBIX_AGENT_INTERVAL </dev/null >/dev/null 2>&1 &) &
  fi
  return
}

function stop() {
  killall send-zabbix-dat
  return
}

function configtest() {
  return
}

function status() {
  return
}

function tidy() {
  return
}

function build() {
  return
}

case "$1" in
  start)           echo "Starting Zabbix agent cartridge"; start  ;;
  stop)            echo "Stopping Zabbix agent cartridge";   stop ;;
  restart)         echo "Restarting Zabbix agent cartridge"; restart ;;
  reload|graceful) echo "Reloading Zabbix agent cartridge";  reload ;;
  status)          status ;;
  configtest)      configtest ;;
  tidy)            tidy ;;
  build)           build ;;
  deploy)          exit 0 ;; 
  *)               exit 0
esac

exit $?
